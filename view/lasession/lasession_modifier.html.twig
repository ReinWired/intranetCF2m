{# on étend le template depuis base.html.twig, qui est donc son parent #}
{% extends "template.html.twig" %}

{# on veut surcharger le title, on utilise le bloc, on récupère le contenu du parent {{ parent() }} et on rajoute notre texte #}
{% block title %}{{ parent() }} | Admin | Modifier une session{% endblock %}

{% block menuhaut %}

{% endblock %}

{% block milieu %}
    <!-- Page Content -->
<main role="main" class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Administration du CF2m</h1>
                <p class="lead">Admin | Modifier une session</p>
            </div>
            <div class="col-lg-6 text-left">
                {# Affichage du formulaire #}
                <form action="./" method="post">
                    <label for="lenom">Titre de session </label><input id="lenom" name="lenom" size="18" placeholder="Titre de la session" value="{{ detailsession.lenom }}" required><br><br>
                    <label for="lacronyme">Acronyme de session </label><input id="lacronyme" name="lacronyme" size="18" placeholder="Acronyme de la session " value="{{ detailsession.lacronyme }}" required><br><br>
					<label for="lannee">Annee de session </label><input id="lannee" name="lannee" type="number" min='1950' max='2100' value="{{ detailsession.lannee }}" required><br><br>
					<label for="lenumero">Numéro de session </label><input id="lenumero" name="lenumero" type="number"  value="{{ detailsession.lenumero }}" required><br><br>
					<label for="letype">Type de session </label><input id="letype" name="letype" type="number" value="{{ detailsession.letype }}" required><br><br>
					<label for="debut">Début de session </label><input id="debut" name="debut" type="date" value="{{ detailsession.debut }}" required><br><br>
					<label for="fin">Fin de session </label><input id="fin" name="fin" type="date" value="{{ detailsession.fin }}" required><br><br>
					<label for="lafiliere_idfiliere">Filière de session </label><input id="lafiliere_idfiliere" name="lafiliere_idfiliere" type="number" value="{{ detailsession.lafiliere_idfiliere }}" required><br><br>
                    <input type="hidden" name="idlasession" value="{{ detailsession.idlasession }}">
					<input type="submit" value="Envoyer"><input type="reset" value="Réinitialiser les valeurs">
                </form>
                <h3>{{ error }}</h3>
            </div>
        </div>
</main>

{% endblock %}

