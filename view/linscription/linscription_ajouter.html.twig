{% extends "template.html.twig" %}

{% block title %}{{ parent() }} | Insertion d'un nouvel article{% endblock %}

{% block menuhaut %}
    {% include "view/hautEtMenu.html.twig" %}
{% endblock %}

{% block milieu %}
    <!-- Page Content -->
    <main role="main" class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Insertion d'un nouvel utilisateur</h1>
                <p class="lead">Veuillez remplir tous les champs</p>
            </div>
            <div class="col-lg-10 text-left">

                <form method='POST' name='myForm' action=''>
                    <div class="form-group">
                        <label for="exampleFormControlInput1"></label>
                        <input type="text" name="lenomutilisateur" placeholder="votre nom" required><br>
                    </div>
                    
                    
                    <div class="form-group">
                        <label for="exampleFormControlInput2"></label>
                        <input type="text" name="lemotdepasse" placeholder="votre mot de passe" required><br>
                    </div>
                    
                    
                    <button type="submit" class="btn btn-primary">Inscription</button>
                </form>
            </div>
        </div>
    </main>

{% endblock %}

{% block bas %}
